<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF6F6"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragmentreplace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomnavbar"
        android:background="@color/white" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomnavbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#CBFFFFFF"
        android:elevation="22dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/hmeimg1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home"
            android:paddingTop="5dp"
            app:layout_constraintTop_toTopOf="@id/bottomnavbar"
            app:layout_constraintBottom_toBottomOf="@id/bottomnavbar"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="85dp"/>

        <ImageView
            android:id="@+id/dwnldimg2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/bottomnavbar"
            app:layout_constraintBottom_toBottomOf="@id/bottomnavbar"
            android:src="@drawable/download"
            android:paddingTop="5dp"
            android:layout_marginRight="85dp"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>