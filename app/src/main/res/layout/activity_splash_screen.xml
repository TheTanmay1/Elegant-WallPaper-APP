<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F1E6FE"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <TextView
        android:id="@+id/ewtext"
        android:layout_width="359dp"
        android:layout_height="51dp"
        android:text="Elegant Wallpapers"
        android:textSize="38dp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="#6F0B0B"
        android:layout_marginTop="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/eimg1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingTop="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ewtext"
        app:layout_constraintBottom_toTopOf="@id/uaimg2"
        android:layout_marginTop="112dp"
        android:src="@drawable/appnamelogo" />


    <ImageView
        android:id="@+id/uaimg2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eimg1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="35dp"
        android:paddingTop="65dp"
        android:paddingLeft="25dp"
        android:layout_marginBottom="45dp"
        android:src="@drawable/unwiringapps"/>






</androidx.constraintlayout.widget.ConstraintLayout>