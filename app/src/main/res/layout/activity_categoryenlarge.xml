<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:backgroundTint="#F1EAFC"
    tools:context=".CategoryenlargeActivity">

    <TextView
        android:id="@+id/catkanaam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nature"
        android:text="Nature"
        android:fontFamily="@font/nunito_bold"
        android:textColor="#076077"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textSize="40dp"/>


    <TextView
        android:id="@+id/catcount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/catkanaam"
        android:text="  wallpapers available"
        android:fontFamily="@font/nunito_regular"
        android:textColor="#1F0777"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/catkarecycle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/catcount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>